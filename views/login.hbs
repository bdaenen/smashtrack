<h1>{{title}}</h1>
<p>Please log in</p>
<form action="/login" method="post">
    <div class="form-group">
        <label for="usertag">Smash tag*</label>
        <input class="form-control" type="text" required="" id="usertag" name="username" value="">
    </div>
    <div class="form-group">
        <label for="password">Password*</label>
        <input class="form-control" type="password" required="" id="password" name="password" value="">
    </div>
    <input class="btn btn-primary" type="submit" value="Submit">
</form>
